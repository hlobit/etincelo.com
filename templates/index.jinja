    }
  }
  article {
    padding: 0.1em 1em 0.1em 1em;
    margin-top: 1em
  }
  footer {
    /*font-size: 0.8em;*/
    margin-top: 1em;
    padding: 1em 0 3em 0;
  }
  #inputVerifyEmail {
    position: absolute;
    left: -5000px
  }
  #newsletter {
    display: flex;
    gap: 5px;
  }
  #newsletter .field.grow {
